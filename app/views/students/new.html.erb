<%= form_tag students_path do %>
  <%= label_tag(:first_name, "First name") %>
  <%= text_field_tag(:first_name, nil, placeholder: @placeholder_first_name) %>

  <%= label_tag(:last_name, "Last name") %>
  <%= text_field_tag(:last_name, nil, placeholder: @placeholder_last_name) %>

  <%= label_tag(:major, "Major") %>
  <%= text_field_tag(:major, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_age) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>